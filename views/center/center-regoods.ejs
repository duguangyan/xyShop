<%include ../layouts/footer.ejs %>
<script>

    $(".crc-nav span").eq(0).find("img").css('opacity',1);
    // 全部订单/待付款/待收货 nav切换
    $(".crc-nav span").click(function () {
        $(".crc-nav span").removeClass("c-red").eq($(this).index()).addClass("c-red");
        $(".crc-nav span").find("img").css('opacity',0);
        $(this).find("img").css('opacity',1);
        // todo ajax
    })
    // 查看所有订单
    $('.crc-show-orders').click(function () {
        $(".crc-nav span").removeClass("c-red").eq(0).addClass("c-red");
        $(".crc-nav span").find("img").css('opacity',0);
        $(".crc-nav span").eq(0).find("img").css('opacity',1);
        $("html,body").animate({scrollTop:300},1000);//回到顶端
    })
</script>